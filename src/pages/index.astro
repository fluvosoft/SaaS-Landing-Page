---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import ImageCarousel from "@components/sections/landing/ImageCarousel.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/Hero_right_side.png";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import carousel5 from "@images/carosel/carosel_5.jpeg";
import carousel6 from "@images/carosel/carosel_6.png";
import carousel7 from "@images/carosel/carosel_7.png";
import { partnersData } from "@/data_files/constants";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Explore ScrewFast on GitHub"
    url="https://github.com/"
  />

  <HeroSection
    title=`Build your Buisness Landing Page With <span
        class="text-orange-500 dark:text-orange-400">Lumiro</span>`
    subTitle="Professional landing page template with modern design components and seamless customization for your business."
    primaryBtn="Start Exploring"
    primaryBtnURL="/products"
    secondaryBtn="Contact Sales Team"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`From Over <span class="font-bold">12.8k</span> Reviews`
    src={heroImage}
    alt="Stack of ScrewFast product boxes containing assorted hardware tools"
  />

  <ClientsSection
    title="Trusted by Industry Leaders"
    subTitle="Experience the reliability chosen by industry giants."
    partners={partnersData}
  />

  <ImageCarousel />

  <FeaturesGeneral
    title="Why Choose Lumiro?"
    subTitle="Lumiro provides everything you need to create a stunning business landing page. With modern design components, seamless customization, and comprehensive documentation, building your perfect website has never been easier."
    alt="Lumiro landing page template features"
    features={features}
  />

  <FeaturesNavs
    title=`Build Your Perfect Landing Page With <span class="text-orange-500 dark:text-orange-400">Lumiro</span>`
    tabs={[
      {
        heading: "Modern Components",
        content:
          "Create stunning landing pages with Lumiro's pre-built, modern UI components. Each component is carefully designed and ready to use, saving you time and ensuring professional results.",
        svg: "tools",
        src: carousel5,
        alt: "Modern UI components for landing pages",
        first: true,
      },
      {
        heading: "Easy Customization",
        content:
          "Customize your landing page effortlessly with Lumiro's flexible template structure. Tailor colors, layouts, and content to match your brand without complex coding.",
        svg: "dashboard",
        src: carousel6,
        alt: "Easy customization interface",
        second: true,
      },
      {
        heading: "Professional Design",
        content:
          "Create stunning landing pages with Lumiro's user-centric design approach. Every element is crafted to deliver both beautiful aesthetics and exceptional functionality.",
        svg: "house",
        src: carousel7,
        alt: "Professional landing page design",
      },
    ]}
  />

  <TestimonialsSection
    title="Build Faster, Launch Sooner"
    subTitle="With Lumiro, get your business landing page up and running in minutes. Experience the speed of modern web development with our ready-to-use template."
    testimonials={[
      {
        content:
          "Lumiro transformed our web presence! The setup was incredibly fast, and the customization options are outstanding. We had our landing page live in just a few hours. Highly recommended for anyone looking to build a professional website quickly!",
        author: "Samantha Ruiz",
        role: "Chief Marketing Officer | TechStart Inc.",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "10k+",
        description:
          "websites built â€” from startups to established businesses",
      },
      {
        count: "50%",
        description:
          "faster development time with Lumiro's pre-built components",
      },
      {
        count: "95%",
        description:
          "satisfaction rate reported by developers using Lumiro template",
      },
      {
        count: "3x",
        description: "faster time to market with ready-to-use landing pages",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Frequently<br />asked questions" faqs={faqs} />

  <HeroSectionAlt
    title="Let's Build Together"
    subTitle="Lumiro is a professional landing page template, meticulously crafted with Astro, Tailwind CSS, and Preline UI frameworks. Build your business landing page with modern design components and seamless customization."
    url="#"
  />
</MainLayout>
