---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/Hero_right_side.png";
import faqs from "@data/bn/faqs.json";
import features from "@data/bn/features.json";
import pricing from "@data/bn/pricing.json";
import carousel5 from "@images/carosel/carosel_5.jpeg";
import carousel6 from "@images/carosel/carosel_6.png";
import carousel7 from "@images/carosel/carosel_7.png";
import { getRelativeLocaleUrl } from "astro:i18n";
import { partnersData } from "@/data_files/constants";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout lang="bn">
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Découvrez ScrewFast sur GitHub"
    url="https://github.com/"
  />

  <HeroSection
    title=`Build your Buisness Landing Page With <span class="text-orange-500 dark:text-orange-400">Lumiro</span>`
    subTitle="Modèle de page d'atterrissage professionnel avec des composants de design modernes et une personnalisation transparente pour votre entreprise."
    primaryBtn="Commencez à explorer"
    primaryBtnURL={getRelativeLocaleUrl("bn", "products")}
    secondaryBtn="Contacter l'équipe commerciale"
    secondaryBtnURL={getRelativeLocaleUrl("bn", "contact")}
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`À partir de plus de <span class="font-bold">12,8k</span> avis`
    src={heroImage}
    alt="Pile de boîtes de produits ScrewFast contenant des outils matériels assortis"
  />

  <ClientsSection
    title="Faites confiance aux leaders de l'industrie"
    subTitle="Découvrez la fiabilité choisie par les géants de l'industrie."
    partners={partnersData}
  />

  <FeaturesGeneral
    title="Pourquoi choisir Lumiro ?"
    subTitle="Lumiro fournit tout ce dont vous avez besoin pour créer une page d'atterrissage professionnelle. Avec des composants de design modernes, une personnalisation transparente et une documentation complète, créer votre site Web parfait n'a jamais été aussi simple."
    alt="Fonctionnalités du modèle de page d'atterrissage Lumiro"
    features={features}
  />

  <FeaturesNavs
    title=`Créez votre page d'atterrissage parfaite avec <span class="text-orange-500 dark:text-orange-400">Lumiro</span>`
    tabs={[
      {
        heading: "Composants modernes",
        content:
          "Créez de superbes pages d'atterrissage avec les composants UI modernes pré-construits de Lumiro. Chaque composant est soigneusement conçu et prêt à l'emploi, vous faisant gagner du temps et garantissant des résultats professionnels.",
        svg: "tools",
        src: carousel5,
        alt: "Composants UI modernes pour pages d'atterrissage",
        first: true,
      },
      {
        heading: "Personnalisation facile",
        content:
          "Personnalisez votre page d'atterrissage sans effort avec la structure de modèle flexible de Lumiro. Adaptez les couleurs, les mises en page et le contenu pour correspondre à votre marque sans codage complexe.",
        svg: "dashboard",
        src: carousel6,
        alt: "Interface de personnalisation facile",
        second: true,
      },
      {
        heading: "Design professionnel",
        content:
          "Créez de superbes pages d'atterrissage avec l'approche de conception centrée sur l'utilisateur de Lumiro. Chaque élément est conçu pour offrir à la fois une esthétique magnifique et une fonctionnalité exceptionnelle.",
        svg: "house",
        src: carousel7,
        alt: "Design de page d'atterrissage professionnel",
      },
    ]}
  />

  <TestimonialsSection
    title="Construisez plus vite, lancez plus tôt"
    subTitle="Avec Lumiro, mettez votre page d'atterrissage professionnelle en ligne en quelques minutes. Découvrez la rapidité du développement web moderne avec notre modèle prêt à l'emploi."
    testimonials={[
      {
        content:
          "Lumiro a transformé notre présence web ! La configuration était incroyablement rapide et les options de personnalisation sont exceptionnelles. Nous avons mis notre page d'atterrissage en ligne en quelques heures seulement. Fortement recommandé pour tous ceux qui cherchent à créer un site Web professionnel rapidement !",
        author: "Samantha Ruiz",
        role: "Directrice Marketing | TechStart Inc.",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "10k+",
        description:
          "sites Web créés — des startups aux entreprises établies",
      },
      {
        count: "50%",
        description:
          "temps de développement plus rapide avec les composants pré-construits de Lumiro",
      },
      {
        count: "95%",
        description:
          "taux de satisfaction rapporté par les développeurs utilisant le modèle Lumiro",
      },
      {
        count: "3x",
        description: "mise sur le marché plus rapide avec des pages d'atterrissage prêtes à l'emploi",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Questions<br />fréquemment posées" faqs={faqs} />

  <HeroSectionAlt
    title="Construisons ensemble"
    subTitle="Lumiro est un modèle de page d'atterrissage professionnel, méticuleusement conçu avec les frameworks Astro, Tailwind CSS et Preline UI. Créez votre page d'atterrissage professionnelle avec des composants de design modernes et une personnalisation transparente."
    url="#"
  />
</MainLayout>
