---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";
import { getRelativeLocaleUrl } from 'astro:i18n';

// Import necessary images
import carousel1 from "@images/carosel/carosel_1.jpeg";
import carousel2 from "@images/carosel/carosel_2.jpeg";
import carousel3 from "@images/carosel/carosel_3.jpeg";
import carousel4 from "@images/carosel/carosel_4.jpeg";
import carousel5 from "@images/carosel/carosel_5.jpeg";
import carousel6 from "@images/carosel/carosel_6.png";
import carousel7 from "@images/carosel/carosel_7.png";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Conseils d'experts sur les modèles",
    subTitle:
      "Créer une page d'accueil professionnelle peut être accablant. Avec la documentation complète et le support d'experts de Lumiro, nous vous guidons à chaque étape, en veillant à ce que vous créiez de superbes pages d'accueil professionnelles. Que vous soyez débutant ou développeur expérimenté, nos ressources sont conçues pour vous aider à personnaliser les modèles, comprendre les composants et mettre en œuvre les meilleures pratiques pour des résultats optimaux.",
    single: false,
    imgOne: carousel1,
    imgOneAlt: "Design de modèle de page d'accueil professionnel",
    imgTwo: carousel2,
    imgTwoAlt: "Composants UI modernes et éléments de design",
  },
  {
    isRightSection: false,
    title: "Transformer les idées en pages d'accueil époustouflantes",
    subTitle:
      "Lumiro apporte précision et excellence à chaque projet de page d'accueil. Des pages d'entreprise simples aux sites multi-sections complexes, nos modèles offrent des solutions fiables pour transformer votre vision en présence en ligne professionnelle. Nous assurons les normes les plus élevées de qualité de design, d'optimisation des performances et d'expérience utilisateur, en utilisant des frameworks modernes et les meilleures pratiques.",
    img: carousel3,
    imgAlt: "Présentation de design de page d'accueil magnifique",
    btnExists: true,
    btnTitle: "Explorer les modèles",
    btnURL: getRelativeLocaleUrl("bn", "/products"),
  },
  {
    isRightSection: true,
    title: "Gestion complète des modèles",
    subTitle:
      "La gestion efficace des modèles est au cœur de toute page d'accueil réussie. Lumiro offre une documentation approfondie et des services de support solides qui maintiennent votre projet sur la bonne voie. Laissez-nous gérer les complexités de l'intégration des composants, de la personnalisation du style et du design responsive pendant que vous vous concentrez sur vos objectifs commerciaux.",
    single: false,
    imgOne: carousel4,
    imgOneAlt: "Interface de personnalisation de modèle",
    imgTwo: carousel5,
    imgTwoAlt: "Composants de page d'accueil professionnels",
  },
  {
    isRightSection: false,
    title: "Support et mises à jour continus",
    subTitle:
      "Notre engagement envers votre page d'accueil ne s'arrête pas au lancement. Lumiro offre un support continu et des mises à jour régulières pour assurer la longévité et les performances de votre site. De l'assistance technique aux nouvelles fonctionnalités, notre équipe réactive est là pour fournir un support sans faille et maintenir votre page d'accueil moderne et efficace.",
    img: carousel6,
    imgAlt: "Services de support et de maintenance",
  },
  {
    isRightSection: true,
    title: "Solutions personnalisées pour les clients d'entreprise",
    subTitle:
      "Pour nos clients d'entreprise de plus grande envergure, Lumiro propose des solutions de modèles personnalisées conçues pour répondre à des besoins commerciaux spécifiques. En comprenant vos exigences uniques, nous fournissons des stratégies sur mesure visant à optimiser votre présence en ligne, à améliorer les taux de conversion et à stimuler la croissance de votre entreprise avec des modèles de page d'accueil professionnels.",
    single: false,
    imgOne: carousel7,
    imgOneAlt: "Solution de page d'accueil d'entreprise",
    imgTwo: carousel1,
    imgTwoAlt: "Design de page d'accueil d'entreprise personnalisé",
    btnExists: true,
    btnTitle: "Contacter les ventes",
    btnURL: getRelativeLocaleUrl("bn", "/contact"),
  },
];
---

<MainLayout
  title="Services | ScrewFast"
  lang="bn"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/bn/services",
    url: "https://screwfast.uk/bn/services",
    name: "Services de Modèles | Lumiro",
    description:
      "Lumiro fournit des services de modèles exceptionnels et des solutions complètes pour créer des pages d'accueil professionnelles, de la sélection de modèles à la personnalisation et au support.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://screwfast.uk/bn",
      name: "Lumiro",
      description:
        "Lumiro propose des modèles de page d'accueil professionnels avec des composants de design modernes et une personnalisation transparente pour votre entreprise.",
    },
    inLanguage: "fr",
  }}
>
  {/* MainSection is the introductory section of the page, it also contains a CTA button */}
  <MainSection
    title="Unir l'expertise à votre vision"
    subTitle="Chez Lumiro, nous sommes fiers de fournir des solutions de modèles complètes et un service exceptionnel pour créer des pages d'accueil professionnelles. Notre équipe expérimentée est dédiée à soutenir votre projet de la sélection de modèles au lancement avec une gamme de services spécialisés incluant la personnalisation, la documentation et le support continu."
    btnExists={true}
    btnTitle="Explorer les modèles"
    btnURL={getRelativeLocaleUrl("fr", "/products")}
  />
  {/* RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  */}
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  {/* FeaturesStats section showcases essential stats valuable to users */}
  <FeaturesStats
    title="Par les chiffres"
    subTitle="Notre engagement envers la qualité et la fiabilité est évident dans chaque page d'accueil que nous aidons à créer. Chez Lumiro, nous nous engageons à fournir des services de modèles de premier plan dans l'industrie qui garantissent que vos pages d'accueil professionnelles sont conçues pour convertir et performer."
    mainStatTitle="96%"
    mainStatSubTitle="de nos clients évaluent leur expérience avec les modèles Lumiro comme exceptionnelle"
    stats={[
      {
        stat: "99,8%",
        description: "taux de satisfaction des modèles",
      },
      {
        stat: "5 000+",
        description: "pages d'accueil lancées",
      },
      {
        stat: "85%",
        description: "croissance client année après année",
      },
    ]}
  />
</MainLayout>
