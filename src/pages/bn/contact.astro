---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/bn/ContactSection_bn.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Nous Contacter | ${SITE.title}`;
const metaDescription =
  "Vous avez des questions sur les modèles de page d'accueil Lumiro ? Contactez-nous et aidons-vous à créer votre page d'accueil professionnelle.";
const ogTitle = "Nous Contacter | Lumiro";
---

<MainLayout
  title={pageTitle}
  lang="bn"
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/bn/contact",
    url: "https://screwfast.uk/bn/contact",
    name: "Nous Contacter | Lumiro",
    description:
      "Vous avez des questions sur les modèles de page d'accueil Lumiro ? Contactez-nous et aidons-vous à créer votre page d'accueil professionnelle.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://screwfast.uk/bn/",
      name: "Lumiro",
      description:
        "Lumiro propose des modèles de page d'accueil professionnels avec des composants de design modernes et une personnalisation transparente pour votre entreprise.",
    },
    inLanguage: "bn",
  }}
>
  <ContactSection />
</MainLayout>
