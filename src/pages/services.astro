---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import carousel1 from "@images/carosel/carosel_1.jpeg";
import carousel2 from "@images/carosel/carosel_2.jpeg";
import carousel3 from "@images/carosel/carosel_3.jpeg";
import carousel4 from "@images/carosel/carosel_4.jpeg";
import carousel5 from "@images/carosel/carosel_5.jpeg";
import carousel6 from "@images/carosel/carosel_6.png";
import carousel7 from "@images/carosel/carosel_7.png";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Expert Template Guidance",
    subTitle:
      "Building a professional landing page can be overwhelming. With Lumiro's comprehensive documentation and expert support, we guide you through every step, ensuring you create stunning business landing pages. Whether you're a beginner or an experienced developer, our resources are designed to help you customize templates, understand components, and implement best practices for optimal results.",
    single: false,
    imgOne: carousel1,
    imgOneAlt: "Professional landing page template design",
    imgTwo: carousel2,
    imgTwoAlt: "Modern UI components and design elements",
  },
  {
    isRightSection: false,
    title: "Transforming Ideas into Stunning Landing Pages",
    subTitle:
      "Lumiro brings precision and excellence to every landing page project. From simple business pages to complex multi-section sites, our templates offer reliable solutions to turn your vision into a professional online presence. We ensure the highest standards of design quality, performance optimization, and user experience, utilizing modern frameworks and best practices.",
    img: carousel3,
    imgAlt: "Beautiful landing page design showcase",
    btnExists: true,
    btnTitle: "Explore Templates",
    btnURL: "/products",
  },
  {
    isRightSection: true,
    title: "Comprehensive Template Management",
    subTitle:
      "Effective template management is at the heart of any successful landing page. Lumiro provides thorough documentation and robust support services that keep your project on track. Let us handle the complexities of component integration, styling customization, and responsive design while you focus on your business goals.",
    single: false,
    imgOne: carousel4,
    imgOneAlt: "Template customization interface",
    imgTwo: carousel5,
    imgTwoAlt: "Professional landing page components",
  },
  {
    isRightSection: false,
    title: "Ongoing Support and Updates",
    subTitle:
      "Our commitment to your landing page doesn't end at launch. Lumiro offers ongoing support and regular updates to ensure your site's longevity and performance. From technical assistance to new feature releases, our responsive team is there to provide seamless support and keep your landing page modern and effective.",
    img: carousel6,
    imgAlt: "Support and maintenance services",
  },
  {
    isRightSection: true,
    title: "Custom Solutions for Enterprise Clients",
    subTitle:
      "For our larger enterprise clients, Lumiro offers custom template solutions designed to meet specific business needs. By understanding your unique requirements, we provide tailored strategies aimed at optimizing your online presence, enhancing conversion rates, and driving your business growth with professional landing page templates.",
    single: false,
    imgOne: carousel7,
    imgOneAlt: "Enterprise landing page solution",
    imgTwo: carousel1,
    imgTwoAlt: "Custom business landing page design",
    btnExists: true,
    btnTitle: "Contact Sales",
    btnURL: "/contact",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
const metaDescription =
  "Lumiro provides exceptional template services and comprehensive solutions for building professional business landing pages, from template selection to customization and support.";
const ogTitle = "Template Services | Lumiro";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/services",
    url: "https://screwfast.uk/services",
    name: "Template Services | Lumiro",
    description:
      "Lumiro provides exceptional template services and comprehensive solutions for building professional business landing pages, from template selection to customization and support.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://screwfast.uk",
      name: "Lumiro",
      description:
        "Lumiro offers professional landing page templates with modern design components and seamless customization for your business.",
    },
    inLanguage: "en-US",
  }}
>
  {/* MainSection is the introductory section of the page, it also contains a CTA button */}
  <MainSection
    title="Uniting Expertise with Your Vision"
    subTitle="At Lumiro, we take pride in providing comprehensive template solutions and exceptional service for building professional business landing pages. Our experienced team is dedicated to supporting your project from template selection to launch with a range of specialized services including customization, documentation, and ongoing support."
    btnExists={true}
    btnTitle="Explore Templates"
    btnURL="/products"
  />
  {/* RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  */}
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  {/* FeaturesStats section showcases essential stats valuable to users */}
  <FeaturesStats
    title="By the Numbers"
    subTitle="Our commitment to quality and reliability is evident in every landing page we help create. At Lumiro, we are dedicated to delivering industry-leading template services that ensure your business landing pages are built to convert and perform."
    mainStatTitle="96%"
    mainStatSubTitle="of our clients rate their experience with Lumiro templates as exceptional"
    stats={[
      {
        stat: "99.8%",
        description: "template satisfaction rate",
      },
      {
        stat: "5,000+",
        description: "landing pages launched",
      },
      {
        stat: "85%",
        description: "client growth year-over-year",
      },
    ]}
  />
</MainLayout>
