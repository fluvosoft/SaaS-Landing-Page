---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactHero from "@components/sections/landing/ContactHero.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contact | ${SITE.title}`;
const metaDescription =
  "Have questions about Lumiro landing page templates? Reach out, and let's help you build your professional business landing page.";
const ogTitle = "Contact Us | Lumiro";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/contact",
    url: "https://screwfast.uk/contact",
    name: "Contact Us | Lumiro",
    description:
      "Have questions about Lumiro landing page templates? Reach out, and let's help you build your professional business landing page.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://screwfast.uk",
      name: "Lumiro",
      description:
        "Lumiro offers professional landing page templates with modern design components and seamless customization for your business.",
    },
    inLanguage: "en-US",
  }}
>
  <ContactHero />
  <ContactSection />
</MainLayout>
