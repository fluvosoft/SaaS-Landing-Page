---
// Import necessary modules and utilities
import { Image } from "astro:assets";
import Icon from "@components/ui/icons/Icon.astro";
import type { CollectionEntry } from "astro:content";

const { product } = Astro.props;

interface Props {
  product: CollectionEntry<"products">;
}

// Define classes to be used with the Image component
const imageClass =
  "absolute inset-0 h-full w-full object-cover object-center transition duration-[600ms] ease-[cubic-bezier(0.45,0,0.55,1)] group-hover:scale-110";
---

<!-- Product card container following the format: image with name below -->
<div class="group">
  <a
    href={product.data.externalUrl || `/products/${product.id}/`}
    target={product.data.externalUrl ? "_blank" : undefined}
    rel={product.data.externalUrl ? "noopener noreferrer" : undefined}
    data-astro-prefetch={!product.data.externalUrl}
    class="block overflow-hidden rounded-xl shadow-lg outline-hidden ring-zinc-500 focus-visible:ring-3 dark:ring-zinc-200 dark:focus:outline-hidden transition-transform duration-300 hover:shadow-xl hover:-translate-y-1"
  >
    <!-- The product's main image -->
    <div class="relative h-48 overflow-hidden md:h-64">
      {typeof product.data.main.imgCard === 'string' ? (
        <img
          src={product.data.main.imgCard}
          alt={product.data.main.imgAlt}
          draggable={false}
          class="h-full w-full object-cover object-center transition-transform duration-500 group-hover:scale-110"
        />
      ) : (
        <Image
          src={product.data.main.imgCard}
          alt={product.data.main.imgAlt}
          draggable={"false"}
          class="h-full w-full object-cover object-center transition-transform duration-500 group-hover:scale-110"
        />
      )}
    </div>
    <!-- Product name and description below image -->
    <div class="bg-white dark:bg-neutral-800 px-4 py-4 md:px-5 md:py-5">
      <h3 class="text-lg font-bold text-neutral-900 dark:text-neutral-100 mb-1 transition-colors group-hover:text-orange-500 dark:group-hover:text-orange-400">
        {product.data.title}
      </h3>
      <p class="text-sm text-neutral-600 dark:text-neutral-400 line-clamp-2">
        {product.data.description}
      </p>
      <div class="mt-2 flex items-center text-xs text-neutral-500 dark:text-neutral-400">
        <span>View Details</span>
        <Icon name="openInNew" class="ml-1 h-3 w-3" />
      </div>
    </div>
  </a>
</div>
