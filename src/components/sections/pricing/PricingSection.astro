---
// Import SecondaryCTA component for use in this module
import SecondaryCTA from "@components/ui/buttons/SecondaryCTA.astro";
import Icon from "@components/ui/icons/Icon.astro";

// Define props from Astro
const { pricing } = Astro.props;

---

<section
  class="mx-auto max-w-5xl px-4 py-8 sm:px-6 lg:px-8 lg:py-10 2xl:max-w-6xl"
>
  <!-- Section heading and sub-heading -->
  <div class="mx-auto mb-6 max-w-2xl text-center lg:mb-8">
    <h2
      class="text-balance text-2xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight"
    >
      {pricing.title}
    </h2>
    <p class="font-subtitle mt-1 text-pretty text-neutral-600 dark:text-neutral-400">
      {pricing.subTitle}
    </p>
  </div>
  <!-- Contains three main product blocks -->
  <div class="flex flex-wrap items-stretch justify-center gap-4 sm:gap-0">
    <!-- Starter Kit product details -->
    <div
      class="group w-full rounded-2xl border border-neutral-600/50 bg-neutral-800 p-4 shadow-lg transition-all duration-300 hover:-translate-y-1 hover:border-neutral-500 hover:shadow-xl sm:w-1/2 sm:rounded-r-none sm:p-5 lg:w-1/3 lg:rounded-r-none"
    >
      <div class="mb-5">
        <h3 class="text-2xl font-bold text-neutral-100 sm:text-3xl">
          {pricing.starterKit.name}
        </h3>
        <p class="mt-1 text-sm text-indigo-300/90">{pricing.starterKit.description}</p>
      </div>

      <div class="mb-5 flex items-baseline gap-1">
        <span class="text-4xl font-bold tracking-tight text-neutral-100 sm:text-5xl"
          >{pricing.starterKit.yearlyPrice || pricing.starterKit.price}</span
        >
        <span class="text-lg font-bold text-neutral-300"
          >{pricing.starterKit.cents}</span
        >
        <span class="ms-2 text-sm text-indigo-200/80"
          >৳ / yearly</span
        >
      </div>
      <!-- Features list -->
      <ul class="mb-6 space-y-3 text-neutral-300">
        {
          pricing.starterKit.features.map((feature: string) => (
            <li class="flex items-center gap-2.5">
              <span class="flex shrink-0 text-emerald-400"><Icon name="checkCircle" /></span>
              <span>{feature}</span>
            </li>
          ))
        }
      </ul>
      <!-- CTA -->
      <a
        href={pricing.starterKit.purchaseLink}
        class="block rounded-xl border-2 border-orange-500 bg-orange-500 px-6 py-3.5 text-center text-sm font-bold text-white outline-hidden ring-orange-400 transition-all duration-300 hover:scale-[1.02] hover:bg-orange-600 hover:border-orange-600 hover:shadow-lg focus-visible:ring-3 active:scale-[0.98] md:text-base"
        >{pricing.starterKit.purchaseBtnTitle}</a
      >
    </div>
    <!-- Professional Toolbox product details (featured) -->
    <div
      class="group relative z-10 w-full rounded-2xl border-2 border-orange-400/30 bg-gradient-to-br from-[#FF512F] to-[#F09819] p-4 shadow-2xl transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl sm:w-1/2 sm:p-5 lg:w-1/3 lg:scale-[1.02]"
    >
      <span
        class="absolute -top-3 right-4 rounded-full bg-white px-3 py-1 text-xs font-bold uppercase tracking-wider text-orange-600 shadow-md"
        >{pricing.badge}</span
      >
      <div class="mb-5">
        <h3 class="text-2xl font-bold text-white sm:text-3xl">
          {pricing.professionalToolbox.name}
        </h3>
        <p class="mt-1 text-sm text-white/90">{pricing.professionalToolbox.description}</p>
      </div>

      <div class="mb-5 flex items-baseline gap-1">
        <span class="text-5xl font-bold tracking-tight text-white sm:text-6xl"
          >{pricing.professionalToolbox.yearlyPrice || pricing.professionalToolbox.price}</span
        >
        <span class="text-lg font-bold text-white/90"
          >{pricing.professionalToolbox.cents}</span
        >
        <span class="ms-2 text-sm text-white/80"
          >৳ / yearly</span
        >
      </div>
      <!-- Features list - checkmarks with dark circle for visibility on orange -->
      <ul class="mb-6 space-y-3 text-white">
        {
          pricing.professionalToolbox.features.map((feature: string) => (
            <li class="flex items-center gap-2.5">
              <span class="flex h-5 w-5 shrink-0 items-center justify-center rounded-full bg-white/20 text-white"><Icon name="checkCircle" /></span>
              <span class="text-white/95">{feature}</span>
            </li>
          ))
        }
      </ul>
      <!-- CTA -->
      <a
        href={pricing.professionalToolbox.purchaseLink}
        class="block rounded-xl border-2 border-white/90 bg-white px-6 py-3.5 text-center text-sm font-bold text-orange-600 outline-hidden ring-orange-300 transition-all duration-300 hover:scale-[1.02] hover:bg-neutral-50 hover:shadow-lg focus-visible:ring-3 active:scale-[0.98] md:text-base"
        >{pricing.professionalToolbox.purchaseBtnTitle}</a
      >
    </div>
    <!-- Premium Kit product details -->
    {pricing.premiumKit && (
    <div
      class="group w-full rounded-2xl border border-neutral-600/50 bg-neutral-800 p-4 shadow-lg transition-all duration-300 hover:-translate-y-1 hover:border-neutral-500 hover:shadow-xl sm:w-1/2 sm:rounded-l-none sm:p-5 lg:w-1/3 lg:rounded-l-none"
    >
      <div class="mb-5">
        <h3 class="text-2xl font-bold text-neutral-100 sm:text-3xl">
          {pricing.premiumKit.name}
        </h3>
        <p class="mt-1 text-sm text-indigo-300/90">{pricing.premiumKit.description}</p>
      </div>

      <div class="mb-5 flex items-baseline gap-1">
        <span class="text-4xl font-bold tracking-tight text-neutral-100 sm:text-5xl"
          >{pricing.premiumKit.yearlyPrice || pricing.premiumKit.price}</span
        >
        <span class="text-lg font-bold text-neutral-300"
          >{pricing.premiumKit.cents}</span
        >
        <span class="ms-2 text-sm text-indigo-200/80"
          >৳ / yearly</span
        >
      </div>
      <!-- Features list -->
      <ul class="mb-6 space-y-3 text-neutral-300">
        {
          pricing.premiumKit.features.map((feature: string) => (
            <li class="flex items-center gap-2.5">
              <span class="flex shrink-0 text-emerald-400"><Icon name="checkCircle" /></span>
              <span>{feature}</span>
            </li>
          ))
        }
      </ul>
      <!-- CTA -->
      <a
        href={pricing.premiumKit.purchaseLink}
        class="block rounded-xl border-2 border-orange-500 bg-orange-500 px-6 py-3.5 text-center text-sm font-bold text-white outline-hidden ring-orange-400 transition-all duration-300 hover:scale-[1.02] hover:bg-orange-600 hover:border-orange-600 hover:shadow-lg focus-visible:ring-3 active:scale-[0.98] md:text-base"
        >{pricing.premiumKit.purchaseBtnTitle}</a
      >
    </div>
    )}
  </div>
  <!-- Pricing Table -->
  {pricing.pricingTable && (
  <div class="mx-auto mt-8 max-w-4xl overflow-hidden rounded-2xl border border-neutral-200 bg-white shadow-lg dark:border-neutral-600/50 dark:bg-neutral-800/50">
    <div class="overflow-x-auto">
      <table class="min-w-full">
        <thead>
          <tr class="border-b border-neutral-200 bg-neutral-100 dark:border-neutral-600/50 dark:bg-neutral-800">
            {pricing.pricingTable.headers.map((header: string) => (
              <th
                scope="col"
                class="px-4 py-3 text-left text-xs font-bold uppercase tracking-wider text-neutral-700 dark:text-neutral-200 sm:px-5 sm:py-4 sm:text-sm"
              >
                {header}
              </th>
            ))}
          </tr>
        </thead>
        <tbody class="divide-y divide-neutral-200 bg-white dark:divide-neutral-600/40 dark:bg-neutral-800/80">
          {pricing.pricingTable.rows.map((row: { plan: string; orders: string; monthly: string; yearly: string; renew: string }) => (
            <tr class="transition-colors duration-200 hover:bg-neutral-50 dark:hover:bg-neutral-700/50">
              <td class="whitespace-nowrap px-4 py-3 text-sm font-bold text-orange-500 sm:px-5 sm:py-4 sm:text-base dark:text-orange-400">
                {row.plan}
              </td>
              <td class="whitespace-nowrap px-4 py-3 text-sm text-neutral-600 sm:px-5 sm:py-4 sm:text-base dark:text-neutral-300">
                {row.orders}
              </td>
              <td class="whitespace-nowrap px-4 py-3 text-sm text-neutral-600 sm:px-5 sm:py-4 sm:text-base dark:text-neutral-300">
                {row.monthly} ৳
              </td>
              <td class="whitespace-nowrap px-4 py-3 text-sm font-semibold text-neutral-800 sm:px-5 sm:py-4 sm:text-base dark:text-neutral-200">
                {row.yearly} ৳
              </td>
              <td class="whitespace-nowrap px-4 py-3 text-sm text-neutral-600 sm:px-5 sm:py-4 sm:text-base dark:text-neutral-300">
                {row.renew} ৳
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
  )}
  <!-- Call to action for Enterprise Solutions -->
  <div class="mt-6 flex flex-wrap items-center justify-center gap-x-4 gap-y-2 md:mt-8">
    <p class="text-sm text-neutral-600 dark:text-neutral-400 sm:text-base">
      {pricing.thirdOption}
    </p>

    <SecondaryCTA title={pricing.btnText} url="/contact" variant="white" />
  </div>
</section>
