---
//Import relevant dependencies
import NavLink from "@components/ui/links/NavLink.astro";
import enStrings from "@utils/navigation.ts";
import BrandLogo from "@components/BrandLogo.astro";

const strings = enStrings;
const homeUrl = "/";
---

<!-- Main header component -->
<header
  class="sticky inset-x-0 top-4 z-50 flex w-full flex-wrap text-sm md:flex-nowrap md:justify-start"
>
  <!-- Navigation container -->
  <nav
    class="relative mx-2 w-full min-h-[48px] rounded-[36px] border border-yellow-100/40 bg-yellow-50/60 px-4 py-2.5 backdrop-blur-md dark:border-neutral-700/40 dark:bg-neutral-800/80 dark:backdrop-blur-md md:flex md:min-h-[52px] md:items-center md:justify-between md:px-6 md:py-2.5 lg:px-8 lg:py-3 xl:mx-auto"
    aria-label="Global"
  >
    <div class="flex min-h-[48px] items-center justify-between md:min-h-0">
      <!-- Brand logo -->
      <a
        class="flex items-center gap-2.5 flex-none rounded-lg py-1 text-xl font-bold outline-hidden ring-zinc-500 transition-all duration-200 hover:opacity-90 hover:scale-[1.02] focus-visible:ring-3 dark:ring-zinc-200 dark:focus:outline-hidden lg:text-2xl"
        href={homeUrl}
        aria-label="Brand"
      >
        <BrandLogo class="h-auto w-10 shrink-0 lg:w-11" />
        <span class="text-white">Lumiro</span>
      </a>
      <!-- Collapse toggle for smaller screens -->
      <div class="ml-auto mr-5 md:hidden">
        <button
          type="button"
          class="hs-collapse-toggle flex h-8 w-8 items-center justify-center rounded-full text-sm font-bold text-neutral-600 transition-all duration-200 hover:bg-orange-500/15 hover:text-orange-600 disabled:pointer-events-none disabled:opacity-50 dark:text-neutral-400 dark:hover:bg-orange-500/20 dark:hover:text-orange-400 dark:focus:outline-hidden"
          data-hs-collapse="#navbar-collapse-with-animation"
          aria-controls="navbar-collapse-with-animation"
          aria-label="Toggle navigation"
        >
          <svg
            class="h-[1.25rem] w-[1.25rem] shrink-0 hs-collapse-open:hidden"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <line x1="3" x2="21" y1="6" y2="6"></line>
            <line x1="3" x2="21" y1="12" y2="12"></line>
            <line x1="3" x2="21" y1="18" y2="18"></line>
          </svg>
          <svg
            class="hidden h-[1.25rem] w-[1.25rem] shrink-0 hs-collapse-open:block"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M18 6 6 18"></path>
            <path d="m6 6 12 12"></path>
          </svg>
        </button>
      </div>
    </div>
    <!-- Contains navigation links -->
    <div
      id="navbar-collapse-with-animation"
      class="hs-collapse hidden grow basis-full overflow-hidden transition-all duration-300 md:block"
    >
      <!-- Navigation links container -->
      <div
        class="mt-5 flex flex-col gap-x-0 gap-y-4 md:mt-0 md:flex-row md:items-center md:justify-end md:gap-x-1 md:gap-y-0 md:ps-7 lg:gap-x-2"
      >
        <!-- Navigation links -->
        {strings.navBarLinks.map(link => (
          <NavLink url={link.url} name={link.name} />
        ))}
      </div>
    </div>
  </nav>
</header>
